<!DOCTYPE html>
<html>

<head>
    <title>{{ title }}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <h1>{{ title }}</h1>
    <h3>Add A Connection</h3>
    <form id="addContactForm" action="post">
        <div class="formGroup">
            <label for="first">first:</label>
            <input id="first" required>
        </div>
        <div class="formGroup">
            <label for="last">last:</label>
            <input id="last" required>
        </div>
        <div class="formGroup">
            <label for="email">email:</label>
            <input type="email" id="email">
        </div>
        <div class="formGroup">
            <label for="phone">phone</label>
            <input id="phone">
        </div>
        <div>
            <a href="/addContact">Update</a>
            <a id="cancel" href="/index">cancel</a>
        </div>

    </form>